---
// Información de contacto
const contactInfo = {
  phone: "960371612",
  email: "jairdangelo67@gmail.com",
  instagram: "jair.dangelo",
  location: "Lima – Perú",
  whatsapp: "51960371612"
};

// Horarios de trabajo
const workingHours = [
  { day: "Lunes - Viernes", hours: "9:00 AM - 6:00 PM" },
  { day: "Sábados", hours: "10:00 AM - 2:00 PM" },
  { day: "Domingos", hours: "Cerrado" }
];
---

<section id="contact" class="py-20 bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">Contacto</h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        ¿Tienes un proyecto en mente? Conversemos sobre cómo puedo ayudarte a hacerlo realidad.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Información de contacto -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bold mb-6">Información de Contacto</h3>
          
          <div class="space-y-6">
            <!-- Teléfono -->
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center">
                <i class="fas fa-phone text-white"></i>
              </div>
              <div>
                <p class="font-medium">Teléfono / WhatsApp</p>
                <a href={`tel:${contactInfo.phone}`} class="text-gray-300 hover:text-white transition-colors">
                  +51 {contactInfo.phone}
                </a>
              </div>
            </div>
            
            <!-- Email -->
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center">
                <i class="fas fa-envelope text-white"></i>
              </div>
              <div>
                <p class="font-medium">Email</p>
                <a href={`mailto:${contactInfo.email}`} class="text-gray-300 hover:text-white transition-colors">
                  {contactInfo.email}
                </a>
              </div>
            </div>
            
            <!-- Instagram -->
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center">
                <i class="fab fa-instagram text-white"></i>
              </div>
              <div>
                <p class="font-medium">Instagram</p>
                <a href={`https://instagram.com/${contactInfo.instagram}`} target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white transition-colors">
                  @{contactInfo.instagram}
                </a>
              </div>
            </div>
            
            <!-- Ubicación -->
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center">
                <i class="fas fa-map-marker-alt text-white"></i>
              </div>
              <div>
                <p class="font-medium">Ubicación</p>
                <p class="text-gray-300">{contactInfo.location}</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Horarios -->
        <div>
          <h3 class="text-xl font-bold mb-4">Horarios de Trabajo</h3>
          <div class="space-y-2">
            {workingHours.map((schedule) => (
              <div class="flex justify-between">
                <span class="text-gray-300">{schedule.day}</span>
                <span class="text-white">{schedule.hours}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Formulario de contacto -->
      <div class="bg-gray-800 rounded-xl p-8">
        <h3 class="text-2xl font-bold mb-6">Envíame un Mensaje</h3>
        
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium mb-2">Nombre</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"
                placeholder="Tu nombre"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"
                placeholder="tu@email.com"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium mb-2">Asunto</label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors"
              placeholder="Tipo de proyecto"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Mensaje</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-white transition-colors resize-none"
              placeholder="Cuéntame sobre tu proyecto..."
              required
            ></textarea>
          </div>
          
          <button 
            type="submit"
            class="w-full bg-white text-gray-900 px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors duration-200"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>
    </div>
    
    <!-- Botones de acción rápida -->
    <div class="mt-16 text-center">
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <!-- WhatsApp directo -->
        <a 
          href={`https://wa.me/${contactInfo.whatsapp}?text=Hola Jair, me interesa tu trabajo audiovisual. ¿Podemos conversar sobre mi proyecto?`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 bg-green-600 text-white px-8 py-4 rounded-lg font-medium hover:bg-green-700 transition-colors duration-200"
        >
          <i class="fab fa-whatsapp text-xl"></i>
          <span>Chatear por WhatsApp</span>
        </a>
        
        <!-- Llamada directa -->
        <a 
          href={`tel:${contactInfo.phone}`}
          class="inline-flex items-center gap-3 bg-gray-700 text-white px-8 py-4 rounded-lg font-medium hover:bg-gray-600 transition-colors duration-200"
        >
          <i class="fas fa-phone"></i>
          <span>Llamar Ahora</span>
        </a>
      </div>
    </div>
  </div>
</section> 